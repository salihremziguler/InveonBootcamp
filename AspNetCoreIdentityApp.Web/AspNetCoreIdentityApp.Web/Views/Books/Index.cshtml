
@{
    ViewData["Title"] = "Index";
}

@model List<BookViewModel>

<div class="container my-5">
    <h2 class="mb-4 text-center">📚 Kitap Listeleme</h2>

    <div class="table-responsive">
        <table class="table table-striped table-hover shadow-sm">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Author</th>
                    <th scope="col">Publication Year</th>
                    <th scope="col">ISBN</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>


                @foreach (var book in Model)
                {
                    <tr>
                        <td>
                            <strong><a asp-action="Details" asp-route-id="@book.Id" class="text-primary text-decoration-none">@book.Title</a></strong>
                        </td>
                        <td>@book.Author</td>
                        <td>@book.PublicationYear</td>
                        <td>@book.ISBN</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-sm btn-outline-info">Detaylar</a>
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>
